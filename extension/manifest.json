{
  "name": "__MSG_appName__",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "64": "icons/icon-64.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts/index.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/page.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}
